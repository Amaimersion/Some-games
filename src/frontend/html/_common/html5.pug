block vars
  - var year = "2019";
  - var title = "Some Games";


block mixins
  mixin css(href)
    link(
      rel="stylesheet"
      href=href
    )&attributes(attributes)

  mixin js(src, props={})
    script(
      defer=props.defer
      async=props.async
      src=src
    )&attributes(attributes)

  mixin js-defer(src)
    +js(
      src,
      {defer: true}
    )&attributes(attributes)

  mixin js-async(src)
    +js(
      src,
      {async: true}
    )&attributes(attributes)


<!DOCTYPE html>
html(
  class=htmlClass
  lang=htmlLang ? htmlLang : "en"
)

  head
    block head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      title=title ? title : "Some Games"

  body(class=bodyClass)
    block body
      block header
      block main
      block footer
